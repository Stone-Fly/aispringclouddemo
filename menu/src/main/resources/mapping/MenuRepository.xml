<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alageek.repository.MenuRepository">

     <select id="findAll" resultType="com.alageek.entity.Menu">
         select * from t_menu limit #{param1},#{param2}
     </select>

    <select id="count" resultType="Menu">
         select count(id) from t_menu
     </select>

    <select id="findById" resultType="Menu" parameterType="long">
         select * from t_menu where id = #{id}
     </select>

    <insert id="save" parameterType="Menu">
         insert into t_menu(name,price,flavor) values (#{name},#{price},#{flavor})
     </insert>

    <update id="update" parameterType="Menu">
         update t_menu set name = #{name}, price = #{price}, flavor = #{flavor}
     </update>

    <delete id="deleteById" parameterType="long">
        delete from t_menu where id = #{id}
    </delete>

</mapper>